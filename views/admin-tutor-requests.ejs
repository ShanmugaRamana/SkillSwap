<h2>Pending Tutor Requests</h2>

<% if (requests.length === 0) { %>
  <p>No tutor requests found.</p>
<% } %>

<% requests.forEach(req => { %>
  <div style="border: 1px solid #ccc; padding: 10px; margin: 10px;">
    <p><strong>Name:</strong> <%= req.name %></p>
    <p><strong>Email:</strong> <%= req.user.email %></p>
    <p><strong>Location:</strong> <%= req.location %></p>
    <p><strong>Skills Offered:</strong> <%= req.skillsOffered.join(', ') %></p>
    <p><strong>Status:</strong> <%= req.status %></p>
    <p><strong>Certification File:</strong> 
<a href="/uploads/<%= req.certificationFile %>" target="_blank">View PDF</a>
</p>
    <form action="/admin/approve-tutor/<%= req._id %>" method="POST">
      <button type="submit">Approve</button>
    </form>

    <form action="/admin/reject-tutor/<%= req._id %>" method="POST">
      <input type="text" name="reason" placeholder="Reason for rejection" required />
      <button type="submit">Reject</button>
    </form>
  </div>
<% }) %>
